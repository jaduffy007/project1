	<h1>This is the author's ID <%= user.id %></h1>
	<h1>This is my ID <%= currentUser.id %></h1>

  <h2>All posts by <%= user.id %></h2>

	<% if(currentUser.id === user.id){ %>
	<br>
  	<a href="/users/<%= user.id %>/posts/new">Add a new post</a>
  <br>
	<% } %>

  <% allPosts.forEach(function(post,index){ %>
  <% if(post.hasWon !== true){ %>
  <h2><a href="posts/<%=post.id %>"><%= post.title %></a></h2>
  on <%=post.createdAt %>
  <br><%=post.description %>
  <% } %>
  <% if(currentUser.id === user.id && post.hasWon === false){ %> 
  	<a href="/users/<%= user.id %>/posts/<%= post.id %>/edit">Edit</a>
  <br>
  <br>
  	<form action="/users/<%= user.id %>/posts/<%= post.id %>?_method=delete" method ="POST">
  	<input type="submit" value ="Delete">
  	</form>
  <br>

  <% } else { %>
  <% } %>
  <% }); %>




